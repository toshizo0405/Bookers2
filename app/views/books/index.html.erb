<%= render 'list', user: @user %>



        <div class="col-md-8 offset-md-1">
         <h2>Books</h2>
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                <% @books.each do |book| %>
                    <tr>
                        <td>
                            <% if @user.profile_image.attached? %>
                             <%= image_tag @user.profile_image, size: "80x80" %>
                            <% else %>
                             <%= image_tag 'default-image', size: "80x80" %>
                            <% end %>
                        </td>
                        <td>
                            <%= link_to  book_path(current_user) do %>
                             <%= book.title %>
                            <% end %>
                        </td>
                        <td>
                             <%= book.body %>
                        </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>











