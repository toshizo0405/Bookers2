<%= render  'books/list.html.erb', user: @user,book: @book_new %>


<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table">
     <thead>
       <tr>
         <th></th>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
       </tr>
     </thead>
     <tbody>
        <% @books.each do |book| %>
             <tr>
                 <td>
                    <%= link_to  book_path(book) do %>
                        <% if @user.profile_image.attached? %>
                            <%= image_tag @user.profile_image, size: "80x80" %>
                        <% else %>
                             <%= image_tag 'default-image', size: "80x80" %>
                        <% end %>
                 </td>
                 <td>
                    <%= link_to  book_path(book) do %>
                      <%= book.title %>
                      <% end %>
                    <% end %>
                  </td>
                  <td>
                  ã€€<%= book.body %>
                  </td>
             </tr>
        <% end %>
     </tbody>
  </table>
</div>
</div>
</div>
